# ===============================================
# Pearson Pub Frontend (Nuxt 3) - Environment Variables
# ===============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# ----------------
# API Configuration
# ----------------
# Backend API base URL
NUXT_PUBLIC_API_BASE_URL=http://localhost:5000

# Public site URL (used for meta tags and SEO)
NUXT_PUBLIC_SITE_URL=http://localhost:3000

# ----------------
# App Configuration
# ----------------
NUXT_PUBLIC_APP_NAME=The Pearson Pub
NUXT_PUBLIC_APP_DESCRIPTION=A traditional pub atmosphere with modern amenities in Whitby

# ----------------
# SMTP Configuration (Server-side)
# ----------------
# For contact form email functionality
NUXT_SMTP_HOST=smtp.gmail.com
NUXT_SMTP_PORT=587
NUXT_SMTP_USER=your-email@gmail.com
NUXT_SMTP_PASS=your-gmail-app-password
NUXT_CONTACT_EMAIL=contact@thepearsonpubwhitby.ca

# ----------------
# Redis Configuration (Optional)
# ----------------
# For caching and session management
# If not set, caching will be disabled
NUXT_REDIS_URL=redis://localhost:6379

# ----------------
# Google Fonts (Optional)
# ----------------
# API key for Google Fonts if needed
# NUXT_PUBLIC_GOOGLE_FONTS_KEY=your_google_fonts_api_key
